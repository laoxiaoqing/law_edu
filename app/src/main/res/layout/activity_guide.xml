<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.GuideActivity">

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <Button
            android:id="@+id/btn_start_main"
            android:background="@drawable/btn_start_main_selector"
            android:textColor="@drawable/btn_start_main_text_selector"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="85dp"
            android:visibility="gone"
            android:text="开始体验"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp">
        <LinearLayout
                android:id="@+id/start_point_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        <ImageView
                android:id="@+id/iv_point_light"
                android:background="@drawable/point_light"
                android:layout_width="10sp"
                android:layout_height="10sp"/>

    </RelativeLayout>


</RelativeLayout>