<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
<RadioGroup
    android:background="#e6e6e6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/rb_home"
        android:drawableTop="@drawable/rb_home_drawable_selector"
        android:gravity="center"
        android:text="主页"
        style="@style/rb_tag_style"
        />
    <RadioButton
        android:id="@+id/rb_law"
        android:drawableTop="@drawable/rb_law_drawable_selector"
        android:gravity="center"
        android:text="案例"
        style="@style/rb_tag_style"
        />
    <RadioButton
        android:id="@+id/rb_forum"
        android:drawableTop="@drawable/rb_forum_drawable_selector"
        android:gravity="center"
        android:text="社区"
        style="@style/rb_tag_style"
        />
    <RadioButton
        android:id="@+id/rb_me"
        android:drawableTop="@drawable/rb_me_drawable_selector"
        android:gravity="center"
        android:text="我的"
        style="@style/rb_tag_style"
        />
</RadioGroup>
</LinearLayout>