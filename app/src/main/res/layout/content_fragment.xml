<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <android.support.v4.view.ViewPager-->
    <com.example.administrator.lawapp.ui.IsScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/rb_tag_style"
            android:checked="true"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:gravity="center"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb_law"
            style="@style/rb_tag_style"
            android:drawableTop="@drawable/rb_law_drawable_selector"
            android:gravity="center"
            android:text="法律" />

        <RadioButton
            android:id="@+id/rb_forum"
            style="@style/rb_tag_style"
            android:drawableTop="@drawable/rb_forum_drawable_selector"
            android:gravity="center"
            android:text="社区" />

        <RadioButton
            android:id="@+id/rb_me"
            style="@style/rb_tag_style"
            android:drawableTop="@drawable/rb_me_drawable_selector"
            android:gravity="center"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>